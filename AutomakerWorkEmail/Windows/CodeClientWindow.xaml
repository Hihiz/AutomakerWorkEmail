<Window x:Class="AutomakerWorkEmail.Windows.CodeClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutomakerWorkEmail.Windows"
        mc:Ignorable="d"
        Title="Ввод кода клиента"
        Height="200" 
        Width="350"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="auto">
            <TextBlock Text="Для выдачи заказа, введите код выдачи клиента"/>
            <TextBox x:Name="textBoxCodeClient"/>
            <Button Content="Выдать" Margin="40, 10, 40, 0" Click="ButtonGetOrderClient_Click"/>
        </StackPanel>
    </Grid>
</Window>
